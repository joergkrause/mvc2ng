{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "outDir": "./wwwroot/app",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true, // @Component --> [Component]
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/app/app.ts"    
  ]
}